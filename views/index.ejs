    <%let i=0%> <% titles.forEach(title => { %>
    <h1 style="margin: 0rem 10rem 1rem 10rem"><%=title%></h1>
    <% if (contents[i].length > 75){%>
    <div
      class="d-flex flex-row"
      style="
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      "
    >
      <p style="margin: 0 1rem 1rem 10rem"><%=contents[i].slice(contents[i].length-100)%> <a href="posts/<%=title%>">...read more</a> </p>
    <%}else{%>
        <p style="margin: 0 1rem 1rem 10rem"><%=contents[i]%></p>
    <% } %>    
    </div>
    <% i=i+1 %> <%});%> <%- include('./components/footer'); -%>
